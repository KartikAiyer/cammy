[settings]
os=${CMAKE_SYSTEM_NAME}
arch=armv8
compiler=gcc
compiler.version=10.2
compiler.libcxx=libstdc++11

[env]
CONAN_CMAKE_FIND_ROOT_PATH=${CMAKE_SYSROOT}
CONAN_CMAKE_SYSROOT=${CMAKE_SYSROOT}
PATH=[${tools}/bin]
CHOST=${CMAKE_LIBRARY_ARCHITECTURE}
CC=${CMAKE_C_COMPILER}
CXX=${CMAKE_CXX_COMPILER}
AR=${CMAKE_AR}
RANLIB=${CMAKE_RANLIB}
LD=${CMAKE_LINKER}
STRIP=${CMAKE_STRIP}
CFLAGS="-fPIC -Wl,-rpath-link,${CMAKE_SYSROOT}/usr/lib/${CMAKE_LIBRARY_ARCHITECTURE} -L${CMAKE_SYSROOT}/usr/lib/${CMAKE_LIBRARY_ARCHITECTURE}"
CXXFLAGS="-fPIC -Wl,-rpath-link,${CMAKE_SYSROOT}/usr/lib/${CMAKE_LIBRARY_ARCHITECTURE} -L${CMAKE_SYSROOT}/usr/lib/${CMAKE_LIBRARY_ARCHITECTURE}"